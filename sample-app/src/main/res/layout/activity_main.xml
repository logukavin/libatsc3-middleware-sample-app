<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="userAgentModel"
            type="com.nextgenbroadcast.mobile.middleware.sample.lifecycle.UserAgentViewModel" />

        <variable
            name="receiverModel"
            type="com.nextgenbroadcast.mobile.middleware.sample.lifecycle.ReceiverViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/test_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="connect_to_ws,top,bottom,left,right" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{true || userAgentModel.isReady()}"
            android:text="Start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{true || userAgentModel.isReady()}"
            android:text="Stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Up"
            app:layout_constraintBottom_toTopOf="@+id/left"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Down"
            app:layout_constraintBottom_toTopOf="@+id/right"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/ATSC3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="ATSC3"
            app:layout_constraintBottom_toTopOf="@+id/atsc3_file_path"
            app:layout_constraintStart_toStartOf="@+id/atsc3_file_path" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/atsc3_file_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/atsc3_file_choose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <Button
            android:id="@+id/atsc3_file_choose"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="..."
            app:layout_constraintBottom_toBottomOf="@+id/atsc3_file_path"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/atsc3_file_path"
            app:layout_constraintTop_toTopOf="@+id/atsc3_file_path" />

        <Button
            android:id="@+id/atsc3_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            app:layout_constraintEnd_toStartOf="@+id/atsc3_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atsc3_file_path" />

        <Button
            android:id="@+id/atsc3_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            app:layout_constraintEnd_toStartOf="@+id/atsc3_stop"
            app:layout_constraintStart_toEndOf="@+id/atsc3_open"
            app:layout_constraintTop_toTopOf="@+id/atsc3_open" />

        <Button
            android:id="@+id/atsc3_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            app:layout_constraintEnd_toStartOf="@+id/atsc3_close"
            app:layout_constraintStart_toEndOf="@+id/atsc3_start"
            app:layout_constraintTop_toTopOf="@+id/atsc3_open" />

        <Button
            android:id="@+id/atsc3_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/atsc3_stop"
            app:layout_constraintTop_toTopOf="@+id/atsc3_open" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/atsc3_service_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atsc3_open" />

        <TextView
            android:id="@+id/atsc3_data_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@{receiverModel.appDataLog}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atsc3_service_spinner" />

        <Button
            android:id="@+id/connect_to_ws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="76dp"
            android:text="Connect to web socket server"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/start_user_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{true || userAgentModel.isReady}"
            android:text="Start User Agent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stop" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>