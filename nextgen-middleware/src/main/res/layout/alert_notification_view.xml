<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/alert_color">

    <ImageView
        android:id="@+id/imageViewAlertIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_warning" />

    <LinearLayout xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/imageViewAlertIcon"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAlertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:drawableEnd="@drawable/ic_arrow_down"
            tool:text="Title" />

        <TextView
            android:id="@+id/textViewAlertText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            tool:text="Description" />

    </LinearLayout>
</RelativeLayout>