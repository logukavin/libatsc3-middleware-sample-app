<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/alertContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonOkDialogAlert"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/alert_warning_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_warning"
                app:tint="@color/alert_color" />

            <TextView
                android:id="@+id/textViewAlertTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@+id/alert_warning_icon"
                android:layout_alignTop="@id/alert_warning_icon"
                android:layout_alignBottom="@id/alert_warning_icon"
                tools:text="2021-05-27 00:00" />

            <TextView
                android:id="@+id/textViewAlertMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/alert_warning_icon"
                android:padding="8dp"
                android:textSize="18sp"
                tools:text="Alert message" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonOkDialogAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@color/alert_color"
        android:text="@string/dismiss"
        android:textColor="@android:color/white" />
</RelativeLayout>