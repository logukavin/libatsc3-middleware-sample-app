<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_command">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_select_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_service"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_bs_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_separate_tune" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_service_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/service_name_or_id"
        app:layout_constraintBottom_toBottomOf="@+id/button_select_service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_select_service" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_bs_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/bs_id"
        app:layout_constraintBottom_toBottomOf="@+id/button_select_service"
        app:layout_constraintEnd_toStartOf="@id/button_select_service"
        app:layout_constraintStart_toEndOf="@+id/edit_text_service_name"
        app:layout_constraintTop_toTopOf="@+id/button_select_service" />

    <View
        android:id="@+id/view_separate_select_service"
        style="@style/ViewSeparatorCommand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_select_service" />

</merge>